#!/bin/bash
cd "${0%/*}" || exit                                # Run from this directory
wm_project_dir="/usr/lib/openfoam/openfoam2106"
echo $wm_project_dir
source /openfoam/bash.rc
export WM_PROJECT_DIR=$wm_project_dir
source $wm_project_dir/bin/tools/RunFunctions 
#------------------------------------------------------------------------------

canCompile || exit 0    # Dynamic code

restore0Dir

runApplication blockMesh

runApplication $(getApplication) -withFunctionObjects -writePhi -writephi -writep

runApplication postProcess -func streamFunction

#------------------------------------------------------------------------------
