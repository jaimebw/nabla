 {
     version     2.0;
     format      ascii;
     class       dictionary;
     object      blockMeshDict;
 }
 
 
 scale 100;
 
 vertices (
         (0 0 0) // vertex 0
         (1 0 0) // vertex 1
         (0 1 0) //  2
         (1 1 0) // 3
         (0 0 1) // 4
         (1 0 1)
         (0 1 1)
         (1 1 1)// vertex 7
 
 );
 edges
 ();
 blocks
 (
         hex (0 1 3 2  4 5 7 6) (10 10 10) simpleGrading (1 2 3)
 );
 boundary
 (
         inlet{ // entrada del flujo
                 type patch;
                 faces
                 (
                         (0 1 3 2) // regla de la mano derecha para ver la normal de la superficie
                 );
         }
         outlet{ // salida del flujo
                 type patch;
                 faces
                 (
                         (4 6 7 5) // regla de la mano derecha para ver la normal
                 );
         }
         bottom
         {
                 type symmetryPlane;
                 faces
                 (
                         (0 4 5 1)
                 );
         }
         top
         {
                 type symmetryPlane;
                 faces
                 (
                         (2 3 6 7)
                 );
         }
 );
